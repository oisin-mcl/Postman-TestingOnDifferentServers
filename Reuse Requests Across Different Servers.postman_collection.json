{
	"info": {
		"_postman_id": "5187ac7b-be9c-4f49-8af2-53c9b1f077f3",
		"name": "Reuse Requests Across Different Servers",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "17202983"
	},
	"item": [
		{
			"name": "GET Sample Args",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Test that the expected 200 code is returned\r",
							"pm.test(\"Request Made Successfully\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// Get the response JSON returned from the request\r",
							"var responseJson = pm.response.json();\r",
							"\r",
							"//Check that the API Key is sent correct in the request header\r",
							"pm.test(\"API Key set correct\", function(){\r",
							"    pm.expect(pm.request.headers.get(\"apikey\")).to.eql(pm.environment.get(\"API_Key\"));\r",
							"});\r",
							"\r",
							"//Get the Server value returned in the request\r",
							"var serverReturned = responseJson.args.server;\r",
							"\r",
							"//Check that the server is set correctly in the \"args\" object\r",
							"pm.test(\"Server set correct\", function(){\r",
							"    pm.expect(serverReturned).to.eql(pm.environment.get(\"Server\"));\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "apikey",
						"value": "{{API_Key}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://postman-echo.com/get?server={{Server}}",
					"protocol": "https",
					"host": [
						"postman-echo",
						"com"
					],
					"path": [
						"get"
					],
					"query": [
						{
							"key": "server",
							"value": "{{Server}}"
						}
					]
				}
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	]
}